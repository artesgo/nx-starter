{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-starter/accordion": ["libs/accordion/src/index.ts"],
      "@nx-starter/avatar": ["libs/avatar/src/index.ts"],
      "@nx-starter/budget": ["feature/budget/src/index.ts"],
      "@nx-starter/button": ["libs/button/src/index.ts"],
      "@nx-starter/calendar": ["libs/calendar/src/index.ts"],
      "@nx-starter/card": ["libs/card/src/index.ts"],
      "@nx-starter/checkbox": ["libs/checkbox/src/index.ts"],
      "@nx-starter/directives": ["libs/directives/src/index.ts"],
      "@nx-starter/divider": ["libs/divider/src/index.ts"],
      "@nx-starter/drawer": ["libs/drawer/src/index.ts"],
      "@nx-starter/dropdown": ["libs/dropdown/src/index.ts"],
      "@nx-starter/indicator": ["libs/indicator/src/index.ts"],
      "@nx-starter/input": ["libs/input/src/index.ts"],
      "@nx-starter/link": ["libs/link/src/index.ts"],
      "@nx-starter/modal": ["libs/modal/src/index.ts"],
      "@nx-starter/overlay": ["libs/overlay/src/index.ts"],
      "@nx-starter/radio": ["libs/radio/src/index.ts"],
      "@nx-starter/tabs": ["libs/tabs/src/index.ts"],
      "@nx-starter/theme": ["libs/theme/src/index.ts"],
      "@nx-starter/toast": ["libs/toast/src/index.ts"],
      "@nx-starter/typeahead": ["libs/typeahead/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
